.if empty(toItem("xbheadercolor")) .and. empty(toItem("xbdatacolor")) .and. ;
    empty(toItem("xbdatahilitecol")) .and. empty(toItem("xbfootercolor"))
   .M->cXTc := "{"+cTc+"}"
