   .oo_mnu->OBJ         := M->cObjLab
   .oo_mnu->FLGUPD      := "1"
   .oo_mnu->(dBnet("url"))
.endif
.tOWrite("mnu",oo_mnu->MNU,"pfkfunction" ,alltrim(m->MPrgDrv)+[Exe()] )
.tOWrite("mnu",oo_mnu->MNU,"activeink","1" )
