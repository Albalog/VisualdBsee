IF "S"$cAtr ; nAtr := dfOr(  nAtr,     dfHex2Dec("0004") ); ENDIF

IF "a"$cAtr ; nAtr := dfAnd( nAtr, 255-dfHex2Dec("0020") ); ENDIF
