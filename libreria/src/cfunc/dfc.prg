PROCEDURE dfSetFileAtr( cFile, cAtr )
* ±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±
LOCAL cOldAtr := dfGetFileAtr( cFile ), nAtr

// Attibuti
nAtr := 0

IF "A"$cOldAtr ; nAtr += dfHex2Dec("0020"); ENDIF
IF "H"$cOldAtr ; nAtr += dfHex2Dec("0002"); ENDIF
IF "R"$cOldAtr ; nAtr += dfHex2Dec("0001"); ENDIF
IF "S"$cOldAtr ; nAtr += dfHex2Dec("0004"); ENDIF

IF "A"$cAtr ; nAtr := dfOr(  nAtr,     dfHex2Dec("0020") ); ENDIF
IF "H"$cAtr ; nAtr := dfOr(  nAtr,     dfHex2Dec("0002") ); ENDIF
